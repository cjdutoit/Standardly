{
  "name": "CONFIG: Solution Configuration Settings",
  "description": "Adds an .editorconfig, .gitignore and a license file to the project if they are not already present.",
  "templateType": "Config",
  "ProjectsRequired": "Solution",
  "sortOrder": 100,
  "modelSingularName": "N/A ",
  "modelPluralName": "N/A",
  "tasks": [
    {
      "name": "CONFIG: Add .editorconfig to solution",
      "actions": [
        {
          "name": "Create branch",
          "executionFolder": "$projectFolder$",
          "scripts": [
            {
              "name": "Checkout base branch",
              "script": "git checkout $basebranch$"
            },
            {
              "name": "Fetch the latest code",
              "script": "git pull origin"
            },
            {
              "name": "Create new branch",
              "script": "git checkout -b users/$username$/config-solution-editorconfig"
            }
          ]
        },
        {
          "name": "CONFIG: Add .editorconfig to solution",
          "executionFolder": "$projectFolder$",
          "fileItems": [
            {
              "template": "$templateFolder$\\Solution\\Config\\001_.editorconfig.txt",
              "target": "$solutionFolder$\\.editorconfig",
              "replace": false
            }
          ],
          "scripts": [
            {
              "name": "Stage all changes",
              "script": "git add -A"
            },
            {
              "name": "Commit staged changes",
              "script": "git commit -m \"CONFIG: Add .editorconfig to solution\""
            }
          ]
        },
        {
          "name": "Push branch",
          "executionFolder": "$projectFolder$",
          "scripts": [
            {
              "name": "Push changes to <remote>",
              "script": "git push origin users/$username$/config-solution-editorconfig"
            }
          ]
        },
        {
          "name": "Create Pull Request",
          "executionFolder": "$infrastructureBuildProjectFolder$",
          "scripts": [
            {
              "name": "Create Pull Request",
              "script": "gh pr create -t \"CONFIG: Add .editorconfig to solution\""
            }
          ]
        }
      ]
    },
